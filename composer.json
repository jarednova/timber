{
  "name": "timber/timber",
  "type": "library",
  "description": "Plugin to write WordPress themes w Object-Oriented Code and the Twig Template Engine",
  "keywords": [
    "timber",
    "twig",
    "themes",
    "templating"
  ],
  "homepage": "http://timber.upstatement.com",
  "license": "MIT",
  "authors": [
    {
      "name": "Jared Novack",
      "email": "jared@upstatement.com",
      "homepage": "http://upstatement.com"
    },
    {
      "name": "Connor J. Burton",
      "email": "connorjburton@gmail.com",
      "homepage": "http://connorburton.com"
    }
  ],
  "support": {
    "issues": "https://github.com/timber/timber/issues",
    "source": "https://github.com/timber/timber",
    "docs": "https://timber.github.io/docs/"
  },
  "require": {
    "php": "^7.0",
    "twig/twig": "^2.10",
    "composer/installers": "~1.0",
    "twig/cache-extension": "^1.5.0"
  },
  "require-dev": {
    "johnpbloch/wordpress": ">=5.4.0",
    "phpunit/phpunit": "7.*",
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "^2.0",
    "phpcompatibility/phpcompatibility-wp": "*",
    "wpackagist-plugin/advanced-custom-fields": "5.*",
    "wpackagist-plugin/co-authors-plus": "3.2.*|3.4.*",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
    "szepeviktor/phpstan-wordpress": "^0.6.0",
    "php-stubs/wp-cli-stubs": "^2.2.0"
  },
  "suggest": {
    "satooshi/php-coveralls": "1.0.* for code coverage"
  },
  "autoload": {
    "psr-4": {
      "Timber\\": "lib/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ],
    "exclude-from-classmap": [
      "tests/php",
      "tests/phpstan"
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "scripts": {
    "lint": "phpcs --report-file=./phpcs-log --report-width=120",
    "lint-source": "phpcs --report='source' --report-file='./phpcs-source' --report-width=120",
    "lint-info": "phpcs --report='info'",
    "fix": "phpcbf"
  }
}
